<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Event</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/public/css/signUp.css">

</head>
<body class=" justify-content-center align-items-center d-flex p-5">
    <!-- <div class="backgroundPage d-flex justify-content-center align-items-center"> -->
        <div class="container bodyForm row justify-content-center ">
          <h2 class="">Create An Event</h2>
         <% if(typeof alert !='undefined') {%> 
         <% alert.forEach(function(error){ %>  
          <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>Error</strong><%= error.msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            </button>
          </div>
          <%  })} %> 
          <div>

            <form method="post" action="/createEvent?user?=<%=userName%>">
                
                <div class="form-group">
                  <label for="eventName">Title</label>
                  <input type="text" class="form-control" id="eventName" name="eventName"  placeholder="Enter event's name">
                </div>
                <div class="form-group">
                  <label for="eventDescription">Description</label>
                  <input type="text" class="form-control" id="eventDescription" name="eventDescription" placeholder="Event's Description">
                </div>
              
                <div class="form-group">
                  <label for="eventType">Event Type</label>
                  <select id="eventType" onchange="rsochange()">
                    <option value="4">public</option>
                    <option value="14">private</option>
                    <option value="24">RSO</option>
                  </select>
                </div>
                  <select style="display: none;" id="RSOList">
                    <%for (let i=0; i<list.length; i++) { %>
                      <option value=<%=list[i].RSOName%>><%=list[i].RSOName%></option>
                    <% }%>
                  </select>
                <label for="locationCoord">Location</label>
                <div class="d-flex flex-row locationCoord">
                    <div class="form-group">
                    <input type="text" class="form-control" id="xCoordinate" name="xCoordinate" placeholder="X Coordinate">
                  </div>
                  <div class="form-group">
                    <input type="text" class="form-control" id="yCoordinate" name="yCoordinate" placeholder="Y Coordinate">
                  </div>
                </div>
                <div class="form-group">
                    <label for="eventDate">Date</label>
                    <input type="date" class="form-control" id="eventDate" name="eventDate" placeholder="Event's Date">
                </div>
                <div class="form-group">
                    <label for="eventTime">Time</label>
                    <input type="time" class="form-control" id="eventTime" name="eventTime" placeholder="Event's Time">
                </div>
                <div class="form-group">
                    <label for="eventCat">Category</label>
                    <input type="text" class="form-control" id="eventCat" name="eventCat" placeholder="Event's Category">
                </div>
            
                    <div class="form-group">
                    <label for="contactEmail">Contact Email</label>
                    <input type="email" class="form-control" id="contactEmail" name="contactEmail" placeholder="Contact Email">
                  </div>
                  <div class="form-group">
                    <label for="contactPhoneNumber">Contact Phone Number</label>
                    <input type="text" class="form-control" id="contactPhoneNumber" name="contactPhoneNumber" placeholder="Contact Phone Number">
                  </div>

                <button type="submit" class="btn btn-primary">Create</button>
              </form>
            </div>

        <!-- </div> -->
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
